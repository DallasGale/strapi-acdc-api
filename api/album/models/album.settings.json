{
  "connection": "default",
  "collectionName": "albums",
  "info": {
    "name": "Album"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "Title": {
      "type": "string"
    },
    "IsStudioRecording": {
      "type": "boolean",
      "default": false
    },
    "IsLiveRecording": {
      "type": "boolean",
      "default": false
    },
    "tracks": {
      "collection": "track"
    },
    "InternationalVersion": {
      "type": "boolean",
      "default": false
    },
    "AustralianVersion": {
      "type": "boolean",
      "default": false
    },
    "Compilation": {
      "type": "boolean",
      "default": false
    },
    "Soundtrack": {
      "type": "boolean",
      "default": false
    },
    "Released": {
      "type": "date"
    },
    "labels": {
      "collection": "label"
    },
    "producer": {
      "model": "producer"
    },
    "studios": {
      "collection": "studio",
      "via": "album"
    },
    "performers": {
      "collection": "performer"
    },
    "Artwork": {
      "collection": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "PeakChartPosition": {
      "type": "component",
      "repeatable": true,
      "component": "chart.peak-position"
    },
    "Certifications": {
      "type": "component",
      "repeatable": true,
      "component": "certifications.certifications"
    }
  }
}
